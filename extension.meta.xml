<?xml version="1.0" encoding="UTF-8"?>
<extension id="backend_action" status="released" xmlns="http://symphony-cms.com/schemas/extension/1.0">
	<name>Backend Action</name>
	<description>
		Adds the ability to customize actions in the backend.
		The extension provides a field that will execute the specified php script when activated.
	</description>
	<repo type="github">https://github.com/DeuxHuitHuit/backend_action</repo>
	<url type="discuss">https://github.com/DeuxHuitHuit/backend_action/issues</url>
	<types>
		<type>Field</type>
		<type>Backend</type>
	</types>
	<authors>
		<author>
			<name github="DeuxHuitHuit" symphony="nitriques" twitter="DeuxHuitHuit">Deux Huit Huit</name>
			<website>https://deuxhuithuit.com/</website>
		</author>
	</authors>
	<dependencies>
		<!-- None -->
	</dependencies>
	<releases>
		<release version="2.0.0" date="TBA" min="4.0.0" max="4.x.x" php-min="5.6.x" php-max="7.x.x">
			- Update for Symphony 4.x
		</release>
		<release version="1.1.1" date="2015-01-09" min="2.4.0" max="2.6.x">
			- Fixed a bug (#2) with Date Format
		</release>
		<release version="1.1" date="2014-07-30" min="2.4.0" max="2.5.x">
			- Compatibility with 2.4 and 2.5
			- Small css improvements
		</release>
		<release version="1.0" date="2013-01-20" min="2.3.4" max="2.3.6">
			- First release
		</release>
	</releases>
</extension>
